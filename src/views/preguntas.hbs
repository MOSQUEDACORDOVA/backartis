<script>
	$( document ).ready(function() {
    Swal.fire({
  title: 'Gracias por preferirnos su descarga comenzarÃ¡ en unos segundos',
  timer: 2000,
  timerProgressBar: true,
  width: 600,
  padding: '3em',
  showConfirmButton: false,
  background: '#fff url(/images/trees.png)',
  backdrop: `
  
    rgba(227, 197, 104,0.4)
    url("/images/nyan-cat.gif")
    left top
    no-repeat
  `
}).then((result) =>{
    console.log(result)
    console.log(Swal.DismissReason)
    
    if (result.isConfirmed) {
    window.location.href = '/downgate/{{archivo}}/{{parametro_buscar}}/{{id_usuario}}/{{correo}}/pasarela'
  }
    if (result.isDismissed) {
        {{#if bond}}
        window.location.href = '{{URL_fuente}}'
        {{else}}
        window.location.href = '/downgate/{{archivo}}/{{parametro_buscar}}/{{id_usuario}}/{{correo}}/pasarela'
        {{/if}}
    
  }
})
   
	
}); 
</script>
