    -ms-transition: transform 0.25s ease;
    -o-transition: transform 0.25s ease;
    transition: transform 0.25s ease;
}
div#timeline div.slider div.progress {
    background-color: #D9AD26;
    height: 100%;
    pointer-events: none;
    position: absolute;
    width: 0;
