}
div#timeline span#total-time {
    right: 0;
}

div#timeline div.slider {
    background-color: #D9AD26;
    border-radius: 2px;
    cursor: pointer;
    height: 2px;
    position: relative;
    width: 100%;
}
div#timeline div.slider div.progress div.pin {
    background-color: white;
    border-radius: 8px;
    height: 8px;
    position: absolute;
    pointer-events: all;
    right: -5px;
    top: -3px;
    width: 8px;
