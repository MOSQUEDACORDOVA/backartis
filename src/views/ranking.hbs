<style>
    .music-track{
        padding: 10px;
        background: #f7f8f9;
        border: 1px solid #dce1e6;
        border-radius: 3px;
        min-height: 100px;
        overflow: hidden;
        padding: 18px;
        position: relative;
        z-index: 2;
        margin-bottom: 2rem;
    }
    .music-track iframe{
        width: 100%;
        max-height: 150px;
    }
    .music-track .playButton{
        color: #D9AD26 !important;
    }
    iframe linearGradient stop{
        color: #fff;
    }
    .caja-sound{
        margin-bottom: 1rem;
        position: relative;
        padding: 10px;
        min-height: 150px;
    }
    .carousel .caja-sound{
        min-height: 250px;
    }
    .play--titulo{
        width: 75%;
    }
    .share-music{
        width: 25%;
    }
    .share-music img{
        width: 50px;
        height: 50px;
    }
    .share-music i{
        color: white;
        background-color: #00000082;
        padding: 7px;
        border-radius: 20%;
        font-size: 14px;
    }
    .play--titulo i{
        background: #D9AD26;
        color: white;
        padding:1rem;
        clip-path: circle(50% at 50% 50%);
        margin-right: 10px;
    }
    .titulo-ranking-play span{
        background: #00000082;
        font-size: 14px;
        padding: 2px 4px;
        color: #fff;
    }
    .music-track-share{
        display: block;
    }
    .track-point{
        float: left;
    }
    .track-get-social{
        float: right;
    }
    .track-get-social a{
        text-decoration: none;
    }
    .track-get-social a i{
        color: black;
        opacity: .5;
        margin-right: 10px;
    }
        .track-get-social a i:hover{
        color: #D9AD26;
        opacity: 1;
    }
    .boton-social{
        background: #D9AD26;
        color: white;
        font-weight: bold;
        border-radius: 20px;
    }
    .lanzamiento h5{
        margin-top: auto;
    }


    #top_1{
       /* background-image: url("assets/img/la.jpg");*/
        background-size: cover;
    }
</style>




<div class="container" style="margin-top: 150px;">

    <div class="row mb-5">
        <div class="col-12">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-item active">
                        <div class="music-track">
                            <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/156171843&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"></iframe>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                </div>
            </div>
        </div>
    </div>


    <div class="row" style="width: 100%;">
        <div class="col-md-12 col-lg-6">

            <div class="d-flex justify-content-between mb-4">
