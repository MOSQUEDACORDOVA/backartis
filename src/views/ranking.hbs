                <div class="music-track-share">
                    <div class="track-point">
                        <h3><b>#</b>{{#mathposition i}} {{/mathposition}}</h3>
                    </div>
                    <div class="track-get-social d-flex align-items-center">
                                <a href="s" rel="noopener" target="_blank">
                                    <i class="fab fa-facebook"></i>
                                </a>
                                <a rel="noopener" target="_blank" href="">
                                    <i class="fab fa-twitter"></i>
                                </a>
                        <a class="btn boton-social" href="/track/{{sound.enlace_perzonalizado}}">Obtener</a>
                    </div>
                </div>
            </div>
                {{/each}}
        </div>


    </div>
</div>
